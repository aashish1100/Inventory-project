<% layout("layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .card-header {
      font-weight: bold;
      background-color: #007bff;
      color: #fff;
    }
    .card {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <div class="container-fluid mt-4">
    <!-- Dashboard Header -->
    <div class="row mb-4">
      <div class="col text-center">
        <h2>Inventory Management Dashboard</h2>
      </div>
    </div>

    <!-- Overview Section -->
    <div class="row">
      <div class="col-lg-3">
        <div class="card">
          <div class="card-header">Available Stocks</div>
          <div class="card-body">
            <h5 class="card-title">5,000 items</h5>
            <p class="card-text">Total items in stock.</p>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="card">
          <div class="card-header">Requests</div>
          <div class="card-body">
            <h5 class="card-title">5 Requests</h5>
            <p class="card-text">New Requests</p>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="card">
          <div class="card-header">Defect and Loss</div>
          <div class="card-body">
            <h5 class="card-title">5 items</h5>
            <p class="card-text">items that are defective or Missing</p>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="card">
          <div class="card-header">Orders</div>
          <div class="card-body">
            <h5 class="card-title">10 Orders</h5>
            <p class="card-text">Order placed for new invenotry.</p>
          </div>
        </div>
      </div>
    </div>

  

    <div class="row">
        <!-- Suppliers List Section -->
        <div class="col-lg-8">
          <div class="card">
            <div class="card-header">Recent Suppliers</div>
            <div class="card-body">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Supplier ID</th>
                    <th>Supplier Name</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th>Last Order Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>201</td>
                    <td>Supplier A</td>
                    <td>contact@supplierA.com</td>
                    <td>Active</td>
                    <td>2024-11-12</td>
                  </tr>
                  <tr>
                    <td>202</td>
                    <td>Supplier B</td>
                    <td>contact@supplierB.com</td>
                    <td>Inactive</td>
                    <td>2024-10-29</td>
                  </tr>
                  <!-- More rows as needed -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      
        <!-- Notifications Section -->
        <div class="col-lg-4">
          <div class="card">
            <div class="card-header">Supplier Notifications</div>
            <div class="card-body">
              <ul class="list-group">
                <li class="list-group-item">New order placed with Supplier A</li>
                <li class="list-group-item">Supplier B account is inactive</li>
                <li class="list-group-item">Supplier C needs verification</li>
                <!-- More notifications as needed -->
              </ul>
            </div>
          </div>
        </div>
      </div>
      

    <!-- Quick Actions -->
    <div class="row mt-4">
      <div class="col">
        <div class="d-flex justify-content-center">
          <a href="#" class="btn btn-primary m-2">Add New Product</a>
          <a href="#" class="btn btn-success m-2">Generate Report</a>
          <a href="#" class="btn btn-warning m-2">Place Order</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
